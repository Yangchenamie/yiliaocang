
.content {
  padding: 40rpx;
  background-color: #FFFFFF;
}
.content-head {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.content-head ._h3 {
  font-size: 40rpx;
  font-weight: 600;
}
.content-head .more {
  font-size: 30rpx;
  color: #979797;
  line-height: 50rpx;
}
.content-con {
  width: 670rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  box-shadow:0 0 10rpx 5rpx rgba(0,0,0,0.1);
}
.content-body {
  padding: 30rpx;
}
.content-body .items {
  width: 610rpx;
  height: 250rpx;
  display: flex;
  margin: 40rpx 0;
  border-bottom: 4rpx solid #e0e0e0;
  border-radius: 20rpx;
}
.content-body .items .text {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  padding: 0 20rpx;
}
.content-body .items .text .title {
  padding-top: 10rpx;
  width: 320rpx;
  font-size: 34rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content-body .items .text .shop-keeper {
  padding: 40rpx 0;
  font-size: 30rpx;
  color: #999999;
}
._img {
  width: 270rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

